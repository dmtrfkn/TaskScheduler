<Window x:Class="TaskScheduler.ChangeStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить статус" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Выберите новый статус задачи:"/>
            <ComboBox Name="StatusComboBox" Margin="5">
                <ComboBoxItem Content="Запланировано" />
                <ComboBoxItem Content="В процессе" />
                <ComboBoxItem Content="Выполнено" />
            </ComboBox>

            <!-- Кнопка для применения изменений -->
            <Button Content="Изменить статус" Width="120" Margin="10" Click="ChangeStatusButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
